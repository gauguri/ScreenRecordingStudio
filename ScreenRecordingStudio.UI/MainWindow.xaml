<!-- ScreenRecordingStudio.UI/MainWindow.xaml -->
<Window x:Class="ScreenRecordingStudio.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screen Recording Studio" 
        Height="600" 
        Width="900"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30">

    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1E88E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RecordButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FFE53935"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFD32F2F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFB71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StopButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF424242"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header/Menu Bar -->
        <Border Grid.Row="0" Background="#FF3C3C3C" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Screen Recording Studio" 
                          Foreground="White" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          VerticalAlignment="Center"/>
                <Rectangle Width="20"/>
                <Button Content="Settings" 
                       Style="{StaticResource ModernButtonStyle}" 
                       Click="SettingsButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Controls -->
            <Border Grid.Column="0" 
                   Background="#FF3C3C3C" 
                   CornerRadius="8" 
                   Padding="20">
                <StackPanel>
                    <TextBlock Text="Recording Settings" 
                              Foreground="White" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Margin="0,0,0,20"/>

                    <!-- Capture Mode -->
                    <TextBlock Text="Capture Mode:" 
                              Foreground="White" 
                              Margin="0,0,0,5"/>
                    <ComboBox x:Name="CaptureModeComboBox" 
                             Margin="0,0,0,15"
                             SelectedIndex="0">
                        <ComboBoxItem Content="Full Screen"/>
                        <ComboBoxItem Content="Active Window"/>
                        <ComboBoxItem Content="Custom Region"/>
                    </ComboBox>

                    <!-- Monitor Selection -->
                    <TextBlock Text="Monitor:" 
                              Foreground="White" 
                              Margin="0,0,0,5"/>
                    <ComboBox x:Name="MonitorComboBox" 
                             Margin="0,0,0,15"/>

                    <!-- Audio Settings -->
                    <CheckBox x:Name="RecordAudioCheckBox" 
                             Content="Record System Audio" 
                             Foreground="White" 
                             IsChecked="True" 
                             Margin="0,0,0,10"/>
                    <CheckBox x:Name="RecordMicrophoneCheckBox" 
                             Content="Record Microphone" 
                             Foreground="White" 
                             IsChecked="True" 
                             Margin="0,0,0,15"/>

                    <!-- Frame Rate -->
                    <TextBlock Text="Frame Rate:" 
                              Foreground="White" 
                              Margin="0,0,0,5"/>
                    <ComboBox x:Name="FrameRateComboBox" 
                             Margin="0,0,0,15"
                             SelectedIndex="1">
                        <ComboBoxItem Content="15 FPS"/>
                        <ComboBoxItem Content="30 FPS"/>
                        <ComboBoxItem Content="60 FPS"/>
                    </ComboBox>

                    <!-- Quality -->
                    <TextBlock Text="Quality:" 
                              Foreground="White" 
                              Margin="0,0,0,5"/>
                    <ComboBox x:Name="QualityComboBox" 
                             Margin="0,0,0,20"
                             SelectedIndex="2">
                        <ComboBoxItem Content="Low (480p)"/>
                        <ComboBoxItem Content="Medium (720p)"/>
                        <ComboBoxItem Content="High (1080p)"/>
                        <ComboBoxItem Content="Ultra (1440p+)"/>
                    </ComboBox>

                    <!-- Recording Controls -->
                    <StackPanel>
                        <Button x:Name="StartRecordingButton" 
                               Content="● Start Recording" 
                               Style="{StaticResource RecordButtonStyle}" 
                               Margin="0,0,0,10"
                               Click="StartRecording_Click"/>
                        <Button x:Name="StopRecordingButton" 
                               Content="■ Stop Recording" 
                               Style="{StaticResource StopButtonStyle}" 
                               IsEnabled="False"
                               Click="StopRecording_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Right Panel - Preview/Status -->
            <Border Grid.Column="1" 
                   Background="#FF3C3C3C" 
                   CornerRadius="8" 
                   Margin="20,0,0,0"
                   Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Preview Header -->
                    <TextBlock Grid.Row="0"
                              Text="Recording Preview" 
                              Foreground="White" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Margin="0,0,0,20"/>

                    <!-- Preview Area -->
                    <Border Grid.Row="1" 
                           Background="#FF1E1E1E" 
                           CornerRadius="8" 
                           BorderBrush="#FF007ACC" 
                           BorderThickness="2">
                        <StackPanel VerticalAlignment="Center" 
                                   HorizontalAlignment="Center">
                            <TextBlock x:Name="PreviewStatusText"
                                      Text="Ready to record" 
                                      Foreground="#FF999999" 
                                      FontSize="18" 
                                      HorizontalAlignment="Center"/>
                            <TextBlock x:Name="RecordingTimeText"
                                      Text="00:00:00" 
                                      Foreground="White" 
                                      FontSize="24" 
                                      FontWeight="Bold" 
                                      HorizontalAlignment="Center" 
                                      Margin="0,10,0,0"
                                      Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" 
                           Background="#FF2D2D30" 
                           CornerRadius="4" 
                           Padding="10" 
                           Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="StatusIndicator" 
                                    Width="12" 
                                    Height="12" 
                                    Fill="#FF4CAF50" 
                                    VerticalAlignment="Center"/>
                            <TextBlock x:Name="StatusText" 
                                      Text="Ready" 
                                      Foreground="White" 
                                      Margin="10,0,0,0" 
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF3C3C3C" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Output: " 
                          Foreground="White" 
                          VerticalAlignment="Center"/>
                <TextBlock x:Name="OutputPathText" 
                          Text="C:\Users\Videos\ScreenRecordings\" 
                          Foreground="#FF007ACC" 
                          VerticalAlignment="Center"/>
                <Button Content="Browse..." 
                       Style="{StaticResource ModernButtonStyle}" 
                       Margin="10,0,0,0"
                       Click="BrowseOutput_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>